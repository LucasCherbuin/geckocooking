datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
  }
  
  generator client {
    provider = "prisma-client-js"
  }
  
  model Recette {
    id                Int      @id @default(autoincrement())
    titre             String
    description       String
    tempsPreparation  Time   @default("00:10") // stocke HH:MM
    tempsCuisson      Time   @default("00:10") // stocke HH:MM
    difficulteId      Int
    etatId            Int
    imageId           Int
    ingredientId      Int
    etapesId          Int
    regimeId          Int
  }

  model Utilisateur {
    id                Int      @id @default(autoincrement())
    String            pseudo
    String            email
    String            motDePasse
    int               roleId
    int               recetteId
  }

  model Ingredient {
    id                Int      @id @default(autoincrement())
    String            nom
    int               imageId
    string            unite
    int               quantite
  }
  
  model Difficulte {
    id                Int      @id @default(autoincrement())
    String            label
  }

  model Image {
    id                Int      @id @default(autoincrement())
    String            lien
  }

  model Etapes {
    id                Int      @id @default(autoincrement())
    String            etape1
    String            etape2
    String            etape3
    String            etape4
  }

  class Regime {
    id                Int      @id @default(autoincrement())
    String            Label
  }

  class Etat {
    id                Int      @id @default(autoincrement())
    String            Label
  }
