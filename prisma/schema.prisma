datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
  }
  
  generator client {
    provider = "prisma-client-js"
  }
  
  model Recette {
    id                Int      @id @default(autoincrement())
    titre             String
    description       String
    tempsPreparation  String   @default("00:10") // stocke HH:MM
    tempsCuisson      String   @default("00:10") // stocke HH:MM
    difficulteId      Int
    imageId           Int
    ingredientId      Int
    etapesId          Int
    regimeId          Int
  }

  model Utilisateur {
    id                Int      @id @default(autoincrement())
    pseudo            String
    email             String
    motDePasse        String
    roleId            Int
    recetteId         Int
    commentaireId     Int
  }

  model Ingredient {
    id                Int      @id @default(autoincrement())
    nom               String
    imageId           Int
    sunite            String
  }
  
  model Difficulte {
    id                Int      @id @default(autoincrement())
    label             String
  }

  model Role {
    id                Int      @id @default(autoincrement())
    label             String
  }

  model Image {
    id                Int      @id @default(autoincrement())
    Lien              String
  }

  model Etapes {
    id                Int      @id @default(autoincrement())
    etape1            String
    etape2            String
    etape3            String
    etape4            String
  }

  model Regime {
    id                Int      @id @default(autoincrement())
    Label             String
  }
